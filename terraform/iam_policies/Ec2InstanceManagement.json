{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "Ec2InstanceManagement",
            "Effect": "Allow",
            "Resource": "*",
            "Action": [
                "ec2:*Instance*",
                "ec2:Describe*",
                "ec2:*Tags*",
                "ec2:*NetworkInterface",
                "ec2:*KeyPair",
                "ec2:*InstanceProfile*",
                "ec2:*LaunchTemplate*"
            ],
            "Condition": {
                "StringEqualsIfExists": {
                    "ec2:InstanceType": "t2.micro"
                }
            }
        }
    ]
}