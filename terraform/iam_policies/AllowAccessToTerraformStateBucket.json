{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowAccessToTerraformStateBucket",
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::tamas-gaspar-epam-cloudx-terraform-state",
                "arn:aws:s3:::tamas-gaspar-epam-cloudx-terraform-state/*"
